    </div>

    <!-- Table of Top 5 Popular Templates -->
    <h2 class="my-4 text-center">Top 5 Most Popular Templates</h2>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Template Name</th>
                    <th>Author</th>
                    <th>Number of Filled Forms</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Popular Template 1</td>
                    <td>Author A</td>
                    <td>120</td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Popular Template 2</td>
                    <td>Author B</td>
                    <td>100</td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>Popular Template 3</td>
                    <td>Author C</td>
                    <td>95</td>
                </tr>
                <tr>
                    <th scope="row">4</th>
                    <td>Popular Template 4</td>
                    <td>Author D</td>
                    <td>90</td>
                </tr>
                <tr>
                    <th scope="row">5</th>
                    <td>Popular Template 5</td>
                    <td>Author E</td>
                    <td>85</td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Tag Cloud -->
    <h2 class="my-4 text-center">Tag Cloud</h2>
    <div class="text-center">
        <div class="tag-cloud">
            <a href="search-results.html?tag=quiz" class="badge bg-primary m-2 p-2">Quiz</a>
            <a href="search-results.html?tag=form" class="badge bg-secondary m-2 p-2">Form</a>
