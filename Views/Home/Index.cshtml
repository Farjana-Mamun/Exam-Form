    <div class="row">
        <!-- Template Card 1 -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm h-100">
                <img src="/images/Two.jpg" class="card-img-top template-img" alt="Template Image">
                <div class="card-body">
                    <h5 class="card-title">Template 1</h5>
                    <p class="card-text">This is a brief description of Template 1.</p>
                    <p class="card-text"><small class="text-muted">Author: John Doe</small></p>
                </div>
            </div>
        </div>
        <!-- Template Card 2 -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm h-100">
                <img src="/images/Exam.jpg" class="card-img-top template-img" alt="Template Image">
                <div class="card-body">
                    <h5 class="card-title">Template 2</h5>
                    <p class="card-text">This is a brief description of Template 2.</p>
                    <p class="card-text"><small class="text-muted">Author: Jane Smith</small></p>
                </div>
            </div>
        </div>
        <!-- Template Card 3 -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm h-100">
                <img src="/images/Three.jpg" class="card-img-top template-img" alt="Template Image">
                <div class="card-body">
                    <h5 class="card-title">Template 3</h5>
                    <p class="card-text">This is a brief description of Template 3.</p>
                    <p class="card-text"><small class="text-muted">Author: Sarah Lee</small></p>
                </div>
