@model List<ExamForms.ViewModel.Account.AssignRolesToUserViewModel>
@{
    var userId = ViewBag.UserId;
}

<section class="header-background">
    <div class="container">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <h2>Assign roles to user</h2>
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check m-1">
                            <input asp-for="@Model[i].RoleId" type="hidden" class="form-check-input">
                            <input asp-for="@Model[i].RoleName" type="hidden" class="form-check-input">
                            <input asp-for="@Model[i].IsSelected" class="form-check-input">
                            <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].RoleName</label>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <input type="submit" value="Update" class="btn btn-primary" />
                    <a asp-route-id="@userId" asp-action="EditUser" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</section>