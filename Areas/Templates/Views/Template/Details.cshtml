        <li class="nav-item" role="presentation">
            <a class="nav-link @(ViewData["ActiveTab"]?.ToString() == "Setup" ? "active" : "")"
               asp-action="SaveTemplate" asp-controller="Template" asp-area="Templates" role="tab" aria-controls="setup" aria-selected="true">Template Setup</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link @(ViewData["ActiveTab"]?.ToString() == "Questions" ? "active" : "")"
               asp-action="AddTemplateQuestion" asp-controller="Question" asp-area="Templates" role="tab" aria-controls="questions" aria-selected="false">Template Questions</a>
