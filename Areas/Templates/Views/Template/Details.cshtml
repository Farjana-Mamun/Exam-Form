            <a class="nav-link @(ViewData["ActiveTab"]?.ToString() == "SubmittedForms" ? "active" : "")"
               asp-action="SubmitForm" asp-controller="Form" asp-area="Templates" role="tab" aria-controls="submitted-forms" aria-selected="false">Submitted Forms</a>
        </li>
    </ul> *@


    <div class="tab-content" id="templateTabContent">
        <!-- Template Setup Tab -->
        <div class="tab-pane fade @(ViewData["ActiveTab"]?.ToString() == "Setup" ? "show active" : "")" id="setup" role="tabpanel" aria-labelledby="setup-tab">
            <h3>Template Setup</h3>
            <p>Here you can display and manage the template setup details.</p>
            <!-- Add more template setup content here -->
        </div>

        <!-- Template Questions Tab -->
        <div class="tab-pane fade @(ViewData["ActiveTab"]?.ToString() == "Questions" ? "show active" : "")" id="questions" role="tabpanel" aria-labelledby="questions-tab">
            <h3>Template Questions</h3>
            <p>Here you can display and manage the questions for this template.</p>
            <!-- Add questions-related content here -->
        </div>

        <!-- Submitted Forms Tab -->
        <div class="tab-pane fade @(ViewData["ActiveTab"]?.ToString() == "SubmittedForms" ? "show active" : "")" id="submitted-forms" role="tabpanel" aria-labelledby="submitted-forms-tab">
            <h3>Submitted Forms</h3>
            @if (Model.SubmittedForms != null && Model.SubmittedForms.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Submitted By</th>
                            <th>Submitted On</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var form in Model.SubmittedForms)
                        {
                            <tr>
                                <td>@form.SubmittedBy</td>
                                <td>@form.SubmittedDate.ToShortDateString()</td>
                                <td>
                                    <a href="@Url.Action("FormDetails", "Forms", new { formId = form.FormId })" class="btn btn-info btn-sm">View Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No forms have been submitted yet.</p>
            }
        </div>
    </div>

    <!-- Comment Section -->
    <h3>Comments</h3>
    <div class="comments-section mb-4">
        @if (Model.Comments != null && Model.Comments.Any())
        {
            @foreach (var comment in Model.Comments)
            {
                <div class="comment border p-3 rounded mb-3">
                    <p><strong>@comment.UserId:</strong> @comment.CommentText</p>
                    <p><small>Posted on: @comment.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</small></p> <!-- Display exact date and time -->
                </div>
            }
        }
        else
        {
            <p>No comments yet. Be the first to comment!</p>
        }
    </div>

    <!-- Add Comment Form -->
    <form asp-action="AddComment" method="post" id="commentForm">
        <input type="hidden" name="TemplateId" value="@Model.Template.TemplateId" />
        <div class="form-group">
            <textarea id="commentText" name="CommentText" class="form-control" placeholder="Write a comment..." required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit Comment</button>
    </form>

    <script>
        document.getElementById('commentForm').addEventListener('submit', function (event) {
            var commentText = document.getElementById('commentText').value.trim();
            if (!commentText) {
                event.preventDefault(); // Prevent the form from submitting
                alert('Comment cannot be empty.');
            }
        });
    </script>

</div>
